  <script>
    document.getElementById('pictures').addEventListener('change', validateImages);
    document.getElementById('picture').addEventListener('change', validateImages);
  
    function validateImages(event) {
      const files = event.target.files;
      const minWidth = 576;
      const minHeight = 720;
  
      for (const file of files) {
        const img = new Image();
        img.src = URL.createObjectURL(file);
  
        img.onload = () => {
          if (img.width < minWidth || img.height < minHeight || img.height <= img.width) {
            alert(`File "${file.name}" is invalid. It must be at least ${minWidth}x${minHeight}px and portrait-oriented.`);
            event.target.value = ''; 
          }
        };
      }
    }
  </script>
