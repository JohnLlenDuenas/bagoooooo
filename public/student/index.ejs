  <script>
    // Get elements
      const shareButton = document.getElementById('shareButton');
      const pictureModal = document.getElementById('pictureModal');
      const closeButton = document.querySelector('.close');
      const facebookShare = document.getElementById('facebookShare');
      const instagramShare = document.getElementById('instagramShare');
      const studentPicture = document.getElementById('studentPicture');
      const canvas = document.getElementById('canvas');

      const logoUrl = 'logo.png';

      shareButton.addEventListener('click', () => {
        pictureModal.style.display = 'flex';
        overlayLogoOnPicture();
      });

      closeButton.addEventListener('click', () => {
        pictureModal.style.display = 'none';
      });

      async function overlayLogoOnPicture() {
        const ctx = canvas.getContext('2d');
        const picture = new Image();
        const logo = new Image();

        picture.src = studentPicture.src;
        logo.src = logoUrl;

        await Promise.all([picture.decode(), logo.decode()]);

        canvas.width = picture.width;
        canvas.height = picture.height;

        ctx.drawImage(picture, 0, 0, canvas.width, canvas.height);

        const logoWidth = canvas.width * 0.1;
        const logoHeight = (logoWidth / logo.width) * logo.height;

        const logoX = canvas.width - logoWidth - 20;
        const logoY = canvas.height - logoHeight - 20;

        ctx.drawImage(logo, logoX, logoY, logoWidth, logoHeight);
      }

      facebookShare.addEventListener('click', (e) => {
        e.preventDefault();
        const pictureUrl = canvas.toDataURL('image/png');
        const facebookShareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(pictureUrl)}`;
        window.open(facebookShareUrl, '_blank');
      });

      instagramShare.addEventListener('click', () => {
        const pictureUrl = canvas.toDataURL('image/png');
        navigator.clipboard.writeText(pictureUrl).then(() => {
          alert('Picture link copied! Share it on Instagram.');
        }).catch((err) => {
          console.error('Failed to copy link:', err);
        });
      });

      window.addEventListener('click', (event) => {
        if (event.target === pictureModal) {
          pictureModal.style.display = 'none';
        }
      });

  </script>
