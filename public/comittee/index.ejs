  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
  
    // Display the initial logs when the page loads
    socket.on('initialLogs', function(logs) {
      logs.forEach(log => displayLog(log));
    });
  
    // Listen for new logs
    socket.on('newLog', function(logs) {
      logs.forEach(log => displayLog(log));
    });
  
    function displayLog(log) {
      const logList = document.getElementById('logList');
      const logItem = document.createElement('li');
      logItem.textContent = `${log.timestamp} - ${log.action}: ${log.details}`;
      logList.appendChild(logItem);
    }
  </script>
  
