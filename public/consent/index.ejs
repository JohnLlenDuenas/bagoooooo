  <script>
    $(document).ready(function() {
      $('#consentForm').submit(function(event) {
        event.preventDefault();
        var student_Number = $('#student_number').val();
        var student_Name = $('#student_name').val();
        var gradeSection = $('#gradeSection').val();
        var parentguardian_name = $('#parentguardian_name').val();
        var relationship = $('#relationship').val();
        var contactno = $('#contactno').val();
        var formStatus;
        const selection = document.getElementsByName('acceptedOrRejected');
        for (let option of selection) {
          if (option.checked) {
            formStatus = option.value;
            break;
          }
        }
        $.ajax({
          type: 'POST',
          url: '/consent-fill',
          data: JSON.stringify({
            student_Number, student_Name, gradeSection, parentguardian_name, relationship, contactno, formStatus
          }),
          contentType: 'application/json',
          success: function(response) {
            $('#consentForm').html('<div class="alert alert-success"><h4>Consent successfully submitted!<br>Thank you!</h4></div>');
            setTimeout(function() {
              window.location.href = response.redirectUrl;
            }, 1000);
          },
          error: function(xhr, status, error) {
            $('#ConsentMessage').html('<div class="alert alert-danger">An error occurred: ' + xhr.responseText + '</div>');
          }
        });
      });
    });
  </script>  
