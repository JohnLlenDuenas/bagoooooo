    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>

    /* Background to mimic paper */
    .paper {
      background: linear-gradient(white, #f9f9f9);
      border: 1px solid #ddd;
      padding: 20px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      width: 80%;
      margin: 0 auto;
      max-width: 800px;
      border-radius: 10px;
      background-image: linear-gradient(white 50px, #e3e3e3 51px);
      background-size: 100% 52px; /* Creates lines for paper */
    }
    
    .diary-form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    
    
    .home{
  text-align: center;
  font-size: 125%;
  font-family: 'Courier New', Courier, monospace; /* Typewriter-like font */
  border: 1px solid #ccc;
  resize: none;
  line-height: 1.6;
  background-color: transparent;
  border: none;
  outline: none;
  color: #333;
  text-decoration: none;
}
p{
   line-height: 300%;
}
@media screen and (max-width: 480px) {
    p{
        line-height: 150%;
    }
    .paper{
        margin:0 ;
        width: 90%;
    }

}
    </style>
</head>
    <body style="background-color: blanchedalmond;text-align: center;">
        <div style="text-align: center; font-family: 'Courier New', Courier, monospace; margin: 1%;">
            <div class="paper">
                <h1 class="input"><%= diary.title %></h1>
                <p class="textarea" ><%= diary.content %></p>
                <div style="display: grid; grid-template-columns: 50% 50%;">
                    <div>
                        <img style="max-width: 75%;" src="/uploads/<%= diary.image1 %>" alt="Diary Image 1">
                    </div>
                    <div>
                        <img style="max-width: 75%;" src="/uploads/<%= diary.image2 %>"  alt="Diary Image 2">
                    </div>
                </div>
                <% if (diary.video) { %>
                    <div style="margin: 5%;">
                        <video autoplay loop controls style="max-width: 90%;  height: auto;">
                            <source src="/uploads/<%= diary.video %>" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                <% } %>
                <p class="input"><%= diary.date.toDateString() %></p>
    
                
            </div>
        </div>
        <a href="/" class="home" >Home</a>
    </body>
    


