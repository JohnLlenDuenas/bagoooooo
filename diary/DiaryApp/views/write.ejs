  <meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>

.paper {
  background: linear-gradient(white, #f9f9f9);
  border: 1px solid #ddd;
  padding: 20px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  width: 80%;
  margin: 0 auto;
  max-width: 800px;
  border-radius: 10px;
  background-image: linear-gradient(white 50px, #e3e3e3 51px);
  background-size: 100% 52px; 
}

.diary-form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

textarea {
  width: 100%;
  height: 75%;
  padding: 5%;
  font-size: 125%;
  font-family: 'Courier New', Courier, monospace; 
  border: 1px solid #ccc;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  resize: none;
  line-height: 1.6;
  background-color: transparent;
  border: none;
  outline: none;
  color: #333;
  background-image: linear-gradient(white 95%, transparent 100%), repeating-linear-gradient(#ccc, #ccc 1px, transparent 1px, transparent 10%);
  background-size: 100% 40px, 100% 40px;
}

input {
  text-align: center;
  width: 100%;
  height: auto;
  padding: 5%;
  font-size: 125%;
  font-family: 'Courier New', Courier, monospace;
  border: 1px solid #ccc;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  resize: none;
  line-height: 1.6;
  background-color: transparent;
  border: none;
  outline: none;
  color: #333;
  background-image: linear-gradient(white 95%, transparent 100%), repeating-linear-gradient(#ccc, #ccc 1px, transparent 1px, transparent 10%);

}
.home{
  text-align: center;
  font-size: 125%;
  font-family: 'Courier New', Courier, monospace; 
  border: 1px solid #ccc;
  resize: none;
  line-height: 1.6;
  background-color: transparent;
  border: none;
  outline: none;
  color: #333;
  text-decoration: none;
}
p{
   line-height: 300%;
}
@media screen and (max-width: 480px) {
    p{
        line-height: 125%;
    }
    .paper{
        margin:0 ;
        width: 90%;
    }

}
</style>

</head>
<body style="background-color: blanchedalmond;text-align: center;">
    <div style="text-align: center; font-family: 'Courier New', Courier, monospace; margin: 1%; ">
        <div class="paper">
            <form action="/diary/write" method="POST" enctype="multipart/form-data">
                <input type="text" name="title" placeholder="Diary Title" required><br>
                <textarea name="content" placeholder="Write your diary content" required></textarea><br>
                
                <div style="text-align: center;">
                <div style="display: grid; grid-template-columns: auto auto;max-width: 95%;">
                    <div>
                        <input type="file" name="image1" style=" margin: 3%;" required>
                    </div>
                    <div>
                        <input type="file" name="image2" style=" margin: 3%;" required>
                    </div>
                </div>
                <div style="max-width: 95%;margin: auto;">
                  <input type="file" name="video" accept="video/*" style="margin: 3%;"> 
                </div>
                </div>
                <button type="submit" class="home" style="margin: 5%;" >Submit</button>
            </form>

            
        </div>
    </div>
    <a href="/" class="home">Home</a>
</body>
